<?xml version="1.0" encoding="utf-8"?>

<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    
    <PreferenceCategory android:title="@string/title_display">
                
    <CheckBoxPreference
            android:key="lcd_color"
            android:title="@string/title_lcd_enhancement_color"
            android:persistent="false"
            android:defaultValue="true"
            android:summary="@string/summary_lcd_enhancement_color"/>
    
    <ListPreference
                        android:title="@string/title_dpi"
                        android:key="pref_dpi_list"
                        android:defaultValue="213"
                        android:summary="@string/summary_dpi"
                        android:entries="@array/dpi_names"
                        android:entryValues="@array/dpi_values"/>
                  
    </PreferenceCategory>
    
    <PreferenceCategory android:title="@string/title_wifi">
        
    <Preference
            android:key="wlan_mac"
            android:title="@string/title_wlan_mac"
            android:summary="@string/summary_wlan_mac"
            />

    </PreferenceCategory>
        
    <PreferenceCategory android:title="@string/title_system">

    <CheckBoxPreference
             android:key="ext_internal"
             android:title="@string/title_ext_internal"
             android:persistent="false"
             android:defaultValue="true"
             android:summary="@string/summary_ext_internal"/>

    </PreferenceCategory>

    <PreferenceCategory android:title="@string/title_battery">

        <ListPreference
            android:title="@string/title_battery_capacity"
            android:key="pref_battery_capacity"
            android:defaultValue="15"
            android:summary="@string/summary_battery_capacity"
            android:entries="@array/battery_cap_names"
            android:entryValues="@array/battery_cap_values"/>

        <ListPreference
            android:title="@string/title_battery_volt"
            android:key="pref_battery_volt"
            android:defaultValue="3500"
            android:summary="@string/summary_battery_volt"
            android:entries="@array/battery_volt_names"
            android:entryValues="@array/battery_volt_values"/>

    </PreferenceCategory>



</PreferenceScreen>
